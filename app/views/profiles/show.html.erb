<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Your Profile</h2>
  </div>
  <div class="panel-body">
    <%= form_for @profile, :url => profile_path, :html => { :multipart => true } do |f| %>
    <div class="form-group">
      <%= image_tag @profile.avatar.url(:medium), class: 'profile-image img-circle' %>
    </div>
    <div class="form-group">
      <%= f.label :caption %>
      <%= f.text_field :caption, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select :gender, [['Female', 'Female'], ['Male', 'Male']], {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :age %>
      <%= f.select :age, [['18-24', '18-24'], ['25-32', '25-32']], {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :biography %>
      <%= f.text_area :biography, rows: 5, class: 'form-control' %>
    </div>
    <%= link_to 'Edit', edit_profile_path(current_user[:id]), class: 'btn btn-default' %>
  <% end %>
  </div>
</div>
